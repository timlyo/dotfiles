# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[temp]
label=cpu
command=sensors coretemp-isa-0000 | awk '/Physical/ { print $4 }'
interval=10

[volume]
label=VOL
#label=â™ª
instance=Master
#instance=PCM
command=/usr/libexec/i3blocks/volume
interval=once
signal=10

#[memory]
#label=MEM
#command=/usr/libexec/i3blocks/memory
#separator=false
#interval=30

#[swap]
#label=SWAP
#instance=swap
#command=/usr/libexec/i3blocks/memory
#interval=30

[disk-home]
#instance=$HOME
command=/usr/libexec/i3blocks/disk
interval=10

[wireless]
label=W
instance=wlan0
#instance=wlp3s0
command=/usr/libexec/i3blocks/network
color=#00FF00
interval=10

[cpu]
label=CPU
command=/usr/libexec/i3blocks/cpu_usage
interval=2
min_width=CPU: 80.00%
#separator=false

[load]
command=/usr/libexec/i3blocks/load_average
interval=2

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
